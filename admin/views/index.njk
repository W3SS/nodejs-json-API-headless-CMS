{% extends "layout.njk" %}

{% block content %}
<style>
.dev-tools iframe{    width: 100%;
    height: 2700px;
    border: none;}

</style>


<div class="container-fluid">
	<h1 class="center">{{title}}</h1>
	<ol class="breadcrumb">
		<li>
			<i class="fa fa-dashboard"></i>&nbsp;&nbsp;<a href="/">{{title | capitalize}}</a>
		</li>
	</ol>
	<div class="row center">
	{% if config.googleCharts %}
		<h3>Google Analytics</h3>
		<div class="col-md-6 col-sm-12">
			<h5>Daily Page Hits</h5>
			<div id="bar-chart"></div>
		</div>
		<div class="col-md-6 col-sm-12">  
		  
			<h5>Traffic Over Time</h5>
			<div id="line-chart"></div>
		</div>
	{% endif %}
	</div>

	{% if config.sysMonitor %}
	<div class="dev-tools">
	  <iframe class="embed-responsive-item" src="http://127.0.0.1:3080/"></iframe>
	</div>
	{% endif %}
	
	
	
</div>

{% endblock %}